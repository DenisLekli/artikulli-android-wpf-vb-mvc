@model ArtikullServices.Models.Produkt

<h2>Perditeso Produktin</h2>

<form asp-action="Edit" asp-route-id="@Model.id">
    <div class="form-group">
        <label asp-for="Emertimi" class="control-label">Name</label>
        <input asp-for="Emertimi" class="form-control" />
        <span asp-validation-for="Emertimi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Njesia" class="control-label">Unit</label>
        <input asp-for="Njesia" class="form-control" />
        <span asp-validation-for="Njesia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataSkadences" class="control-label">Expiration Date</label>
        <input asp-for="DataSkadences" type="date" class="form-control" />
        <span asp-validation-for="DataSkadences" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cmimi" class="control-label">Price</label>
        <input asp-for="Cmimi" type="number" class="form-control" />
        <span asp-validation-for="Cmimi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Lloj" class="control-label">Type</label><br />
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Lloj" value="I" />
            <label class="form-check-label" for="Lloj">Imported</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Lloj" value="V" />
            <label class="form-check-label" for="Lloj">Domestic</label>
        </div>
        <span asp-validation-for="Lloj" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KaTvsh" class="control-label">Has VAT</label>
        <input asp-for="KaTvsh" type="checkbox" />
        <span asp-validation-for="KaTvsh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipi" class="control-label">Product Type</label>
        <select asp-for="Tipi" class="form-control">
            <option value="Ushqimore">Ushqimore</option>
            <option value="Bulmet">Bulmet</option>
            <option value="Pije">Pije</option>
            <option value="Embelsire">Embelsire</option>
        </select>
        <span asp-validation-for="Tipi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="BarkodKod" class="control-label">Barcode</label>
        <input asp-for="BarkodKod" class="form-control" />
        <span asp-validation-for="BarkodKod" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Ruaj" class="btn btn-primary" />
    </div>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>

